<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activityMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#1EFFFFFF"
    android:orientation="vertical"
    android:useDefaultMargins="false"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnsearch"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gpsPermissao"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginBottom="-369dp"
        android:layout_toEndOf="@+id/btnAtivarGps"
        android:layout_toRightOf="@+id/btnAtivarGps"
        android:background="@android:drawable/ic_menu_search"
        android:backgroundTint="#FD000000" />

    <Button
        android:onClick="distanciaPercorrida"
        android:id="@+id/distanciaPercorrida"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gpsPermissao"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="false"
        android:layout_marginRight="-6dp"
        android:layout_marginBottom="-214dp"
        android:background="#C54141"
        android:backgroundTint="#F8F8F8"
        android:editable="false"
        android:shadowColor="#150909"
        android:textColor="#FFFFFF"
        android:textColorHint="#0E0101"
        android:textColorLink="#050000" />

    <Button
        android:onClick="mandarPermissaoAndroid"
        android:id="@+id/ValorTempoPassado"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gpsPermissao"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="false"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="-293dp"
        android:background="#C54141"
        android:backgroundTint="#F8F8F8"
        android:editable="false"
        android:shadowColor="#150909"
        android:textColor="#FFFFFF"
        android:textColorHint="#0E0101"
        android:textColorLink="#050000" />

    <Button
        android:id="@+id/iniciarPescurso"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gpsPermissao"
        android:layout_centerHorizontal="false"
        android:layout_marginBottom="-139dp"
        android:onClick="iniciarPercurso"
        android:text="Iniciar Percurso" />

    <Button
        android:onClick="terminarPercurso"
        android:id="@+id/terminarPercurso"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gpsPermissao"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="false"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="-139dp"
        android:editable="false"
        android:text="Terminar Percurso" />

    <Button
        android:id="@+id/btnPararGps"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gpsPermissao"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginBottom="-67dp"
        android:layout_toEndOf="@+id/btnAtivarGps"
        android:layout_toRightOf="@+id/btnAtivarGps"
        android:onClick="pararGps"
        android:text="Desativar GPS" />

    <Button
        android:id="@+id/gpsPermissao"
        android:layout_width="509dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Conceder Permissão" />

    <Button
        android:onClick="ativarGps"
        android:id="@+id/btnAtivarGps"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gpsPermissao"
        android:layout_centerHorizontal="false"
        android:layout_marginBottom="-70dp"
        android:text="ativar GPS" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="141dp"
        android:layout_height="46dp"
        android:layout_below="@+id/gpsPermissao"
        android:layout_marginTop="168dp"
        android:text="Distância Percorrida"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="143dp"
        android:layout_height="37dp"
        android:layout_below="@+id/gpsPermissao"
        android:layout_marginTop="250dp"
        android:backgroundTint="#EF0707"
        android:cursorVisible="false"
        android:editable="true"
        android:text="Tempo Passado" />

    <EditText
        android:id="@+id/valorPesquisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gpsPermissao"
        android:layout_marginTop="326dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="O que deseja encontrar?" />

</RelativeLayout>